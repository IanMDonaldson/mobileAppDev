<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="chipStyle">@style/AppTheme.Chip</item>
    </style>

    <style name="AppTheme.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.pizzaTypeSelected" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="strokeColor">@color/primaryLightColor</item>
    </style>

    <style name="AppTheme.scrollView" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/secondaryLighterColor</item>
    </style>
</resources>
